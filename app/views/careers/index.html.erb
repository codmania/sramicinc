
<div class="container-fluid search-container">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 no_pad ">
<div class="company_users ">
  <h3>Listing Careers
    <% if current_user.try(:role).try(:authority) =='admin'%>
        <h3>
          <%= link_to "Add", new_career_path, :class => 'orange-btn pull-right align-orange-btn ' %>
        </h3><br><br><br>
      </h3>
      <%end%>
 <div class="container">
    <% @careers.each do |career| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">

              <%= career.title %> </h3>
          </div>
          <div class="panel-body">
            <div class="col-xs-10">
              <p>
                <strong>Job Description:</strong>&nbsp;&nbsp;<%= career.description %>
              </p>

              <p>
                <a href="<%= career.link %>">Job Link</a>
              </p>
            </div>

            <div class="col-xs-2">
              <ul class="actions_container table-last-th">
                <% if current_user.try(:role).try(:authority) =='admin' %>
                    <li>
                      <%= link_to '<span class="icon icon_1"></span>'.html_safe,
                                  edit_career_path(career) %>

                    </li>
                    <li>
                      <%= link_to '<span class="icon icon_2"></span>'.html_safe, career_path(career), :method => :delete,
                                  :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))} %>
                    </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>

</div>

</div>

</div>

<div class="paginations top-pagination">
      <%= will_paginate @careers, :inner_window =>2,:outer_window =>0,:renderer=> PaginationHelper::LinkRenderer%>
    </div>

</div>
