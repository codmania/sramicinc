<div class="inboard">
  <div class="margin">

    <div class="enclosure">
      <h3>My Job Cart</h3>
      <h6><%= link_to "Apply for All Jobs", carts_apply_all_jobs_path, :method => 'post'%> </h6>

      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="lodge">
        <tr>
          <th>Job</th>
          <th>Company</th>
          <th class="last">Actions</th>
        </tr>
        <% @jobCarts.each do |cart| %>
        <tr>
          <td data-title="Job"><a href="<%= job_path(cart.id) %>" target="_blank" class="orange" ><%= cart.try(:job).try(:title) %></td>
          <td data-title="Company"><span><%= cart.try(:job).try(:employer).try(:eprofile).try(:company_name) %></span></td>
          <td class="last">
            <%= link_to carts_applyJob_path(:id => cart), :method => 'post', class: "icon icon-check", title: "Apply" do %><% end %>
            <%= link_to cart_path(cart),:method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, class: "icon icon-trash", title: "Delete" do %><% end %>
          </td>
        </tr>
        <% end %>
      </table> 

    </div>

    <div class="centered">
      <div class="paginations">
        <%= will_paginate @jobCarts,:inner_window =>2,:outer_window =>0, :renderer=> PaginationHelper::LinkRenderer%>
      </div>
    </div>


  </div>
</div>

