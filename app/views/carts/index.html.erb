<div class="container-fluid search-container">
  <div class="container">
    <div class="row">

      <div class="col-lg-12 no_pad ">

        <div class="company_users">

          <h1>My Job Cart
            <span class="orange-btn pull-right align-orange-btn"><%= link_to "Apply for All Jobs", carts_apply_all_jobs_path, :method => 'post'%> </span>
          </h1>
          <div class="paginations top-pagination">

          <%= will_paginate @jobCarts,:inner_window =>2,:outer_window =>0, :renderer=> PaginationHelper::LinkRenderer%>

      </div>

          <div id="no-more-tables">
            <table class="col-sm-12 table-striped table-condensed cf">
              <p id="notice"><%= flash['message']%></p>
              <thead class="cf">
              <tr>
                <th style="display: none"></th>
                <th width=550>Job</th>
                 <th width =400>Company</th>
                <th width="" class="table-last-th"></th>
              </tr>
              </thead>
              <tbody>
              <% @jobCarts.each do |cart| %>
                  <tr>
                    <td data-title="id" style="display: none"><%= cart.id %></td>
                    <td data-title="Job">  <a href="<%= job_path(cart.id) %>" target="_blank" ><%= cart.try(:job).try(:title) %></td>
                    <td data-title="Company"><%= cart.try(:job).try(:employer).try(:eprofile).try(:company_name) %></td>
                    <td data-title="300" class="table-last-td">

                    <span class="orange-btn"> <%= link_to "Apply", carts_applyJob_path(:id => cart), :method => 'post'%></span>
                    <span class="orange-btn">   <%= link_to "Remove",cart_path(cart),:method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm",
                                :default => 'Are you sure?')) } %></span>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
