<div class="inboard">
  <div class="margin">

    <div class="enclosure">
      <h3>Job Categories</h3>
      <h6><%= link_to "Add", new_category_path %></h6>

      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="lodge">
        <tr>
          <th>Category Name</th>
          <th class="last">Actions</th>
        </tr>
        <% @categories.each do |category| %>
        <tr>
          <td data-title="Category Name"><span><%= category.try(:name) %></span></td>
          <td class="last">
            <%= link_to edit_category_path(category), class: "icon icon-edit", title: "Edit" do %><% end %>
            <%= link_to category_path(category), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, class: "icon icon-trash", title: "Delete" do %><% end %>
          </td>
        </tr>
        <% end %>
      </table> 

    </div>

    <div class="centered">
      <div class="paginations">
        <%= will_paginate @categories,:inner_window =>2,:outer_window =>0, :renderer=> PaginationHelper::LinkRenderer%>
      </div>
    </div>


  </div>
</div>