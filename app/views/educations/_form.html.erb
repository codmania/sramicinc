<%= form_for @education, :html => { :class => "education" } do |f| %>

  <% if @education.errors.any? %>
    <ul>
      <% @education.errors.full_messages.each do |message| %>
          <li style="color:red;"><%= message %></li>
      <% end %>
    </ul>
  <% end %>


  <div class="form-group">
    <label>Degree<em>*</em></label>
    <%= f.text_field :degree ,:required=>true,:maxlength=>100%>
  </div>
  <div class="form-group">
    <label>Field:</label>
    <%= f.text_field :field,:maxlength=>100 %>
  </div>
  <div class="form-group">
    <label>Institution:</label>
    <%= f.text_field :institution,:maxlength=>200 %>
  </div>
  <div class="form-group">
    <label>Location:</label>
    <%= f.text_field :location,:maxlength=>1000%>
  </div>
  <div class="form-group">
    <label>Completion<em>*</em></label>
    <%= f.text_field :completion,:maxlength=>20,:required=>true %>
  </div>
  
  <div class="actions">
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),educations_path, :class => 'btn btn-ghost' %>
    <%= f.submit 'Save', :class => 'btn btn-blue' %>
  </div>

<%end%>