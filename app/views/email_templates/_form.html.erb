
<%= form_for @email_template, :html => { :class => "form-horizontal skill" } do |f| %>
    <% if @email_template.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@email_template.errors.count, "error") %> prohibited this job from being saved:</h2>

          <ul>
            <% @email_template.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>



    <div class="l-block l-block_1">
      <label>Subject<em>*</em></label><%= f.text_field :subject ,:required=>true%>
    </div>

    <div class="l-block l-block_1">
      <%= f.cktext_area :body ,:cols => 20%><br>
    </div>

    <div class="form-group pro_form_group">
      <div class="col-sm-offset-4 col-sm-10">
        <%= f.submit 'Save', :class => 'btn btn-primary' %>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    email_templates_path, :class => 'btn btn-warning' %>
      </div>
    </div>

<%end%>
