<%= form_for @email_template, :html => { :class => "form-horizontal skill" } do |f| %>

  <% if @email_template.errors.any? %>
    <h2><%= pluralize(@email_template.errors.count, "error") %> prohibited this job from being saved:</h2>
    <ul>
      <% @email_template.errors.full_messages.each do |message| %>
        <li style="color:red;"><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <label>Subject<em>*</em></label>
    <%= f.text_field :subject ,:required=>true%>
  </div>
  <div class="form-group">
    <%= f.cktext_area :body ,:cols => 20%>
  </div>
  <div class="actions">
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), email_templates_path, :class => 'btn btn-ghost' %>
    <%= f.submit 'Save', :class => 'btn btn-orange' %>
  </div>

<%end%>

