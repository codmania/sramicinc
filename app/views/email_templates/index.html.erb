<!--start search-container-->
<div class="container-fluid search-container">
  <div class="container">
    <div class="row">

      <div class="col-lg-12 no_pad ">

        <div class="company_users">

          <h1> Company Email Template
            <% if @email_templates.empty? %>
            <%= link_to "Add", new_email_template_path, :class => 'orange-btn pull-right align-orange-btn' %>
            <% end %>
          </h1>

          <div id="no-more-tables">
            <table class="col-sm-12 table-striped table-condensed cf">
              <thead class="cf">
              <tr>
                <th width="400">Email Subject</th>
                <th width="100" class="table-last-th"></th>
              </tr>
              </thead>
              <tbody>
              <% @email_templates.each do |email_template| %>
                  <tr>
                    <td data-title="Subject"><%= email_template.subject %></td>
                    <td data-title="" class="table-last-td">

                      <ul class="actions_container">
                        <li>
                          <%= link_to '<span class="icon icon_1"></span>'.html_safe,
                                      edit_email_template_path(email_template) %>

                        </li>
                        <li>
                          <%= link_to '<span class="icon icon_2"></span>'.html_safe,
                                      email_template_path(email_template),
                                      :method => :delete,
                                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
                        </li>
                      </ul>

                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>
