<div class="inboard">
  <div class="margin">

    <div class="enclosure">
      <h3>Company Email Template</h3>
      <h6>
        <% if @email_templates.empty? %>
          <%= link_to "Add", new_email_template_path %>
        <% end %>
      </h6>

      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="lodge">
        <tr>
          <th>Email Subject</th>
          <th class="last">Actions</th>
        </tr>
        <% @email_templates.each do |email_template| %>
        <tr>
          <td data-title="Subject"><span><%= email_template.subject %></span></td>
          <td class="last">
            <%= link_to edit_email_template_path(email_template), class: "icon icon-edit", title: "Edit" do %><% end %>
            <%= link_to email_template_path(email_template), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, class: "icon icon-trash", title: "Delete" do %><% end %>
          </td>
        </tr>
        <% end %>
      </table> 

    </div>


  </div>
</div>

