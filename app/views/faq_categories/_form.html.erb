  <div class="actions">
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),faq_categories_path, :class => 'btn btn-ghost' %>
    <%= f.submit 'Save', :class => 'btn btn-blue' %>
  </div>

<%end%>


