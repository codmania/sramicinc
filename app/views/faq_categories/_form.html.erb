<%= form_for @faqcategory, :html => { :class => "enquiry_category" } do |f| %>

  <% if @faqcategory.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@faqcategory.errors.count, "error") %> prohibited this FAQ category from being saved:</h2>
      <ul>
        <% @faqcategory.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Name<em>*</em></label>
    <%= f.text_field :name ,:required=>true%>
