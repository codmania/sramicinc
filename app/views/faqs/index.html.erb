<div class="container-fluid search-container">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 no_pad ">
<div class="company_users ">
  <h3>FAQs
    <% if current_user.try(:role).try(:authority) =='admin'%>
        <h3>
          <%= link_to "Add", new_faq_path, :class => 'orange-btn pull-right align-orange-btn ' %>
        </h3><br><br><br>
      </h3>
      <%end%>
      

<div class = "container">
    <% @fc.each do |fc|%>
        <%if  !@faqs[fc.id].nil?%>
            <div class = "panel panel-default">
              <div class = "panel-heading">
                <h3 class = "panel-title">

                  <%= fc.name%> </h3>
              </div>
              <% @faqs[fc.id].each do |faq|%>

                  <div class = "panel-body">
                    <div class = "col-xs-10">
                      <p>
                        <strong>Question:</strong>&nbsp;&nbsp;<%= faq.question %>
                      </p>
                      <p>
                        <strong>Answer:</strong>&nbsp;&nbsp;&nbsp;&nbsp;<%= faq.answer %>
                      </p>
                    </div>

                    <div class ="col-xs-2">
                      <ul class="actions_container table-last-th">
                        <% if current_user.try(:role).try(:authority) =='admin'%>
                        <li>
                            <%= link_to '<span class="icon icon_1"></span>'.html_safe,
                                        edit_faq_path(faq) %>

                        </li>
                        <li>
                            <%= link_to '<span class="icon icon_2"></span>'.html_safe, faq_path(faq), :method => :delete,
                                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
                        </li>
                        <%end%>
                      </ul>
                    </div>
                  </div>
              <%end%>
            </div>
        <%end%>
    <%end%>
  </div>
</div>
</div>

</div>

</div>

<div class="paginations top-pagination">
      <%= will_paginate @faqs1,:inner_window =>2,:outer_window =>0,:renderer=> PaginationHelper::LinkRenderer%>
    </div>
    
</div>
