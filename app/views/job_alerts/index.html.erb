<div class="container-fluid search-container">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 no_pad ">
        <div class="company_users">
          <h1>Job Alert
            <%= link_to "Add", new_job_alert_path, :class => 'orange-btn pull-right align-orange-btn' %>
          </h1>
          <div id="no-more-tables">
            <table class="col-sm-12 table-striped table-condensed cf">
              <thead class="cf">
              <tr>
                <th>What</th>
                <th>Where</th>
                <th>Within</th>
                <th width="100" class="table-last-th"></th>
              </tr>
              </thead>
              <tbody>
              <% @job_alerts.each do |job_alert| %>
                  <tr>
                    <td data-title="what"><%= job_alert.what %></td>
                    <td data-title="where"><%= job_alert.where %></td>
                    <td data-title="within"><%= job_alert.within %></td>
                    <td data-title="" class="table-last-td">
                      <ul class="actions_container">
                        <li>
                          <%= link_to '<span class="icon icon_1"></span>'.html_safe,
                                      edit_job_alert_path(job_alert) %>
                        </li>
                        <li>
                          <%= link_to '<span class="icon icon_2"></span>'.html_safe,
                                      job_alert_path(job_alert),
                                      :method => :delete,
                                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
                        </li>
                      </ul>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
