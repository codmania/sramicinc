
<!--start search-container-->
<div class="container-fluid search-container">
  <div class="container">
    <div class="row">

      <div class="col-lg-12 no_pad ">

    <div class="company_users">

      <h1>Job History
        <%= link_to "Add", new_job_history_path, :class => 'orange-btn pull-right align-orange-btn' %>
       </h1>

      <div id="no-more-tables">
        <table class="col-sm-12 table-striped table-condensed cf">
          <thead class="cf">
          <tr>
            <th>Title</th>
            <th>Organization</th>
            <th>From</th>
            <th>To</th>
            <th width="100" class="table-last-th"></th>
          </tr>
          </thead>
          <tbody>

          <% @job_histories.each do |job_history| %>

              <tr>
                <td data-title="Title"><%= job_history.title %></td>
                <td data-title="Organization"><%= job_history.organization %><br><% if job_history.currentcompany? %> Current Company <% end %></td>
                <td data-title="From"><%= job_history.from.try(:strftime,"%m/%d/%Y") %></td>
                <%if job_history.currentcompany?%>
                    <td data-title="To">Till now</td>
                <%else%>
                <td data-title="To"><%= job_history.to.try(:strftime,"%m/%d/%Y") %></td>
                    <%end%>

                <td data-title="" class="table-last-td">

                  <ul class="actions_container">
                    <li>
                      <%= link_to '<span class="icon icon_1"></span>'.html_safe,
                                  edit_job_history_path(job_history) %>
                    </li>


                    <li>
                      <%= link_to '<span class="icon icon_2"></span>'.html_safe,
                                  job_history_path(job_history),
                                  :method => :delete,
                                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
                    </li>
                  </ul>

                </td>
              </tr>
          <% end %>


          </tbody>
        </table>
      </div>
