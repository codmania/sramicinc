<div class="inboard">
  <div class="margin">

    <div class="enclosure">
      <h3>Job History</h3>
      <h6><%= link_to "Add", new_job_history_path %></h6>

      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="lodge">
        <tr>
          <th>Title</th>
          <th>Organization</th>
          <th>From</th>
          <th>To</th>
          <th class="last">Actions</th>
        </tr>
        <% @job_histories.each do |job_history| %>
        <tr>
          <td data-title="Title"><span><%= job_history.title %></span></td>
          <td data-title="Organization"><span><%= job_history.organization %><br><% if job_history.currentcompany? %> Current Company <% end %></span></td>
          <td data-title="From"><span><%= job_history.from.try(:strftime,"%m/%d/%Y") %></span></td>
          <%if job_history.currentcompany?%>
            <td data-title="To"><span>Till now</span></td>
          <%else%>
            <td data-title="To"><span><%= job_history.to.try(:strftime,"%m/%d/%Y") %></span></td>
          <%end%>
          <td class="last">
            <%= link_to edit_job_history_path(job_history), class: "icon icon-edit", title: "Edit" do %><% end %>
            <%= link_to job_history_path(job_history), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, class: "icon icon-trash", title: "Delete" do %><% end %>
          </td>
        </tr>
        <% end %>
      </table> 

    </div>

  </div>
</div>