<div class="inboard">
  <div class="margin">

    <div class="enclosure">
      <h3>Job Types</h3>
      <h6><%= link_to "Add", new_job_type_path %></h6>

      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="lodge">
        <tr>
          <th>Job Type Name</th>
          <th class="last">Actions</th>
        </tr>
        <% @job_types.each do |job_type| %>
        <tr>
          <td data-title="Job Type Name"><span><%= job_type.try(:name) %></span></td>
          <td class="last">
            <%= link_to edit_job_type_path(job_type), class: "icon icon-edit", title: "Edit" do %><% end %>
            <%= link_to job_type_path(job_type), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, class: "icon icon-trash", title: "Delete" do %><% end %>
          </td>
        </tr>
        <% end %>
      </table> 

    </div>

    <div class="centered">
      <div class="paginations">
        <%= will_paginate @job_types,:inner_window =>2,:outer_window =>0, :renderer=> PaginationHelper::LinkRenderer%>
      </div>
    </div>


  </div>
</div>

