<%= form_for @jprofile, :html => { :multipart => true , :class => "form-horizontal jprofile" } do |f| %>


    <% if @jprofile.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@jprofile.errors.count, "error") %> prohibited this jprofile from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @jprofile.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>

    <% end %>


    <div class="profile-detail" id="edit_profile_resume_window">
      <ul class="prof-details">

        <div class = "form-group">
          <label class = "col-sm-3 text-muted" for = "title">Resume Headline:</label>
          <div class = "col-sm-4">
            <%= f.text_field :resume_headline,:class => "form-control" %>
          </div>
        </div>

        <div class = "form-group">
          <label class = "col-sm-3 text-muted" for = "title">Resume:</label>
          <div class = "col-sm-4">
            <%= f.file_field :resume,:class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-10">
            <%= f.submit "Save" ,:class => "btn btn-primary" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="button" id="cancel_edit_profile_resume" value="Cancel" class = "btn btn-warning"/>
          </div>
        </div>
      
      </ul>
    </div>


<% end %>