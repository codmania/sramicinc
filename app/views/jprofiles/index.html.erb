<%- model_class = Jprofile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:state_list) %></th>
      <th><%= model_class.human_attribute_name(:country_list) %></th>
      <th><%= model_class.human_attribute_name(:zip) %></th>
      <th><%= model_class.human_attribute_name(:summary) %></th>
      <th><%= model_class.human_attribute_name(:availability) %></th>
      <th><%= model_class.human_attribute_name(:relocation) %></th>
      <th><%= model_class.human_attribute_name(:jobseeker_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @jprofiles.each do |jprofile| %>
      <tr>
        <td><%= link_to jprofile.id, jprofiles_path(jprofile) %></td>
        <td><%= jprofile.title %></td>
        <td><%= jprofile.first_name %></td>
        <td><%= jprofile.last_name %></td>
        <td><%= jprofile.city %></td>
        <td><%= jprofile.state_list.name %></td>
        <td><%= jprofile.country_list.name %></td>
        <td><%= jprofile.zip %></td>
        <td><%= jprofile.phone %></td>
        <td><%= jprofile.summary %></td>
        <td><%= jprofile.availability %></td>
        <td><%= jprofile.relocation %></td>
        <td><%= jprofile.jobseeker_id %></td>
        <td><%=l jprofile.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_jprofile_path(jprofile), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      jprofiles_path(jprofile),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_jprofile_path,
            :class => 'btn btn-primary' %>
