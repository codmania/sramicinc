<div class="banner-search blue" id="search-hiring">
  <div class="margin">
    <div class="wrap">
      <em class="icon icon-cap"></em>
    </div>
    <form action="/search/profiles" class="search-panel">

       <div class="form-group">
        <label>What</label>
        <input type="text" value="<%= params[:what]%>" placeholder="Keywords, Talent Title, or Skills" class="search" name="what"/>
      </div>

       <div class="form-group">
        <label>Where</label>
        <input type="text" value="<%= params[:where]%>" placeholder="City, State or Zip Code" name="where" class="search"/>
      </div>

      <div class="form-group">
        <label>Within</label>
        <select class="selectpicker" name="distance" value="<%= params[:distance]%>" >
          <option value="500" <%if params[:distance]=='500' %>
                  selected
                  <%end%>  >Any Where</option>
          <option value="5" <%if params[:distance]=='5' %>
                  selected
                  <%end%>>5 Miles</option>
          <option value="10" <%if params[:distance]=='10' %>
                  selected
                  <%end%>>10 Miles</option>
          <option value="20" <%if params[:distance]=='20' %>
                  selected
                  <%end%>>20 Miles</option>
          <option value="30" <%if params[:distance]=='30' %>
                  selected
                  <%end%>>30 Miles</option>
          <option value="50" <%if params[:distance]=='50' %>
                  selected
                  <%end%>>50 Miles</option>
        </select>
      </div>

      <input type="submit" value="Search" class="btn btn-blue"/>

      <div class="wrap">
        <a class="advance_search js-open-modal" href="#" data-modal-id="popup2">advance search</a>
      </div>

    </form>
  </div>

</div>
