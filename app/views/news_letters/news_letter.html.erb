<div class="inboard">
  <div class="margin">

    <div class="enclosure">
      <h3>News Letter</h3>

      <%= form_tag({:action => 'send_news_letter'}) do  %>
        <div class="form-group">
          <label>Subject<em>*</em></label>
          <%= text_area :subject,"", :cols => 20, :required=>true %>
        </div>
        <div class="form-group">
          <%= cktext_area :message,"", :cols => 20 %>
        </div>
        <div class="actions">
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),news_letters_path, :class => 'btn btn-ghost' %>
          <%= submit_tag 'Send Email',:class => 'btn btn-blue'%>
        </div>
      <% end %>

    </div>

  </div>
</div>

