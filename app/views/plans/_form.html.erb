<%= form_for(@plan) do |f| %>
  <% if @plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
      <% @plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="l-block l-block_1">
   <label>Name<em>*</em></label><%= f.text_field :name %>
    </div>

    <div class="l-block l-block_1">
    <label>Price</label><%= f.text_field :price,:pattern=>"[0-9]*\.?[0-9]*",:title=>"Enter digits only" %>
      <h6 style="margin-left:10%">(Price is in doller, we add $ sign for price)</h6>
    </div>

    <div class="l-block l-block_1">
      <label>Days</label><%= f.text_field :days,:pattern=>"[0-9]*\.?[0-9]*",:title=>"Enter digits only" %>
    </div>
