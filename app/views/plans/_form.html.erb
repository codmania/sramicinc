    <div class="l-block l-block_1">
      <label>Plan Type<em>*</em></label><%= f.select :plan_type, [["Employer", 'Employer'], ["Jobseeker", 'Jobseeker']] %>
    </div>

    <div class="l-block l-block_1">
      <label>Jobs post</label>
      <%= f.check_box :job_post,{},-1 %><br><br><%= f.label :job_post, "(Unlimited)"%>
       <%= f.text_field :job_post,:pattern=>"^[0-9][0-9]*",:class=>"job_post1",:title=>"Enter positive digits only",:style=>"width:100%;"%>

    </div>


