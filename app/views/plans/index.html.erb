<div class="container-fluid search-container">
  <div class="container">
    <div class="row">

      <div class="col-lg-12 no_pad ">
        <div class="company_users">

       <h1>Plans
            <%= link_to "Add", new_plan_path, :class => 'orange-btn pull-right align-orange-btn' %>
          </h1>

          <div id="no-more-tables">
            <table class="col-sm-12  table-striped table-condensed cf">
              <thead class="cf">
              <tr>
                <th width="190">Name</th>
                <th>Price</th>
                <th>Days</th>
              <!--  <th>Description</th>-->
                <th>Plan Type</th>
                <th width="" class="table-last-th"></th>
              </tr>
              </thead>
              <tbody>
              <% if !@plans.blank? %>

                  <% @plans.each do |plan| %>
                      <tr>
                        <td data-title="Name"><%=plan.try(:name)%></td>
                        <td data-title="Price"> <%= number_to_currency plan.try(:price)%></td>
                        <td data-title="Days"><%= plan.try(:days)%></td>
                      <!--  <td data-title="Description"><%= plan.try(:description)%></td>-->
                        <td data-title="Plan Type"><%= plan.try(:plan_type)%></td>
                        <td data-title="" class="table-last-td">

                      <ul class="actions_container">
                        <li>
                          <%= link_to '<span class="icon icon_1"></span>'.html_safe,
                                      edit_plan_path(plan) %>

                        </li>
                        <li>
                          <%= link_to '<span class="icon icon_2"></span>'.html_safe,
                                      plan_path(plan),
                                      :method => :delete,
                                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
                        </li>
                      </ul>

                    </td>

                        <!--<td data-title="" class="table-last-td">-->
                        <!--<ul class="actions_container">-->
                        
                        <!--</ul>-->
                        <!--</td>-->
                      </tr>
                  <% end %>
                  </tbody>
                  </table>

              <% else %>
                  <h5 style="color:red; text-align:center;"><%= "No results matched for your search!!" %></h5>
              <% end %>

              </div>
        </div>
      </div>

    </div>

  </div>
  <!--<div class="paginations top-pagination remove_pad">-->
    <!--<%#= will_paginate @plans, :inner_window =>2,:outer_window =>0, :renderer=> PaginationHelper::LinkRenderer%>-->
  <!--</div>-->
</div>

