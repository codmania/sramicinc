<div class="inboard">
  <div class="margin">

    <div class="enclosure">

      <h3>Plans</h3>
      <h6><%= link_to "Add", new_plan_path %></h6>

      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="lodge">
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Days</th>
          <th>Plan Type</th>
          <th class="last">Actions</th>
        </tr>

        <% if !@plans.blank? %>
          <% @plans.each do |plan| %>
          <tr>
            <td data-title="Name"><span><%=plan.try(:name)%></span></td>
            <td data-title="Price"><span><%= number_to_currency plan.try(:price)%></span></td>
            <td data-title="Days"><span><%= plan.try(:days)%></span></td>
            <td data-title="Plan Type"><span><%= plan.try(:plan_type)%></span></td>
            <td class="last">
              <%= link_to edit_plan_path(plan), class: "icon icon-edit", title: "Edit" do %><% end %>
              <%= link_to plan_path(plan), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, class: "icon icon-trash", title: "Delete" do %><% end %>
            </td>
          </tr>
          <% end %>
          <% else %>
          <tr>
            <td colspan="5"><span><%= "No results matched for your search!!" %></span></td>
          </tr>
        <% end %>


      </table> 

    </div>

    <!-- <div class="centered">
      <div class="paginations">
        <%#= will_paginate @plans, :inner_window =>2,:outer_window =>0, :renderer=> PaginationHelper::LinkRenderer%>
      </div>
    </div> -->


  </div>
</div>

