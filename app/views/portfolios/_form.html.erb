<%= form_for @portfolio, :html => { :class => "portfolio" } do |f| %>
  <% if @portfolio.errors.any? %>
    <ul>
      <% @portfolio.errors.full_messages.each do |message| %>
          <li style="color:red;"><%= message %></li>
      <% end %>
    </ul>
   <% end %>

  <div class="form-group">
    <label>Name<em>*</em></label>
    <%= f.text_field :name ,:required=>true,:maxlength=>100%>
  </div>
  <div class="form-group">
    <label>URL</label>
    <%= f.text_field :url,:maxlength=>256%>
  </div>
  <div class="form-group">
    <label>Logo</label>
    <%= f.file_field  :logo %>
  </div>

  <div class="actions">
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), portfolios_path, :class => 'btn btn-ghost' %>
    <%= f.submit 'Save', :class => 'btn btn-blue' %>
  </div>

<%end%>