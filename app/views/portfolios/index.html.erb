                </li>
                <li>
                    <%= link_to '<span class="icon icon_2"></span>'.html_safe,
                                 portfolio_path(portfolio),
                                :method => :delete,
                                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
                  </li>
              </ul>

            </td>
          </tr>
          <% end %>
          </tbody>
