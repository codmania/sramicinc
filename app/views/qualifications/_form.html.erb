<%= form_for @qualification, :html => { :class => "form-horizontal qualification" } do |f| %>

    <% if @qualification.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@qualification.errors.count, "error") %> prohibited this qualification from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @qualification.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@qualification[:name]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            qualifications_path, :class => 'btn btn-default' %>

<% end %>
