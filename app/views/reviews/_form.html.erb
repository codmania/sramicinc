<%= form_for  @review, :url => { :action => 'create', :id=>params[:id]} do |f| %>

<div class="col-md-3"></div>
<div class="col-md-5">
	<div class="single_form"><br>
	
		<label>Adding Reviews</label>
	 
   		<div class="l-block l-block_1">
     	 <label>Pros:</label><%= f.text_area :pros, :required=>true %>
   	 	</div>

   	 	<div class="l-block l-block_1">
    	  <label>Cons:</label><%= f.text_area :cons, :required=>true %>
    	</div>

	    <div class="l-block l-block_1">
	      <label>Recommendtions:</label><%= f.text_area :recommendations, :required=>true %>
	    </div>

	    <!--<div class="l-block l-block_1">
	      <label>Ratings:</label><%= f.text_field :ratings %>
	    </div>-->
	  
	 	<span>
	    <label></label><%= f.submit "Save", :class=> "orange-btn" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	                    jobs_path, :class => 'orange-btn' %>
	  	</span>
	</div>
</div>
<%end%>