<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
  <form action="/reviews/review_respond" method="post" data-remote="true" id="review_form">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2>Review Respond</h2>
      </div>
      <div class="modal-body">
        <textarea id="response" style="height:70px;" name="response" required="true" maxlength="1000", placeholder="Enter Response here"></textarea>

          <input type="hidden" name="from" class="from" value="" />
          <input type="hidden" name="review_id" class="review_id" value="" />
      </div>
      <div class="modal-footer">
        <span class="msg"></span>
        <button type="button" class="btn btn-ghost" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-orange">Respond</button>
      </div>
    </div><!-- /.modal-content -->
  </form>
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
$("#review_form").on("ajax:success", function(e, data, status, xhr) {
    $('#myModal').modal('toggle');
    location.reload(true);
  return $(".msg").html(xhr.responseText);
}).on("ajax:error", function(e, xhr, status, error) {
  return $(".msg").html(xhr.responseText);
});

function SetRespondData(from, review_id){
    console.log('from  :'+from+'   review_id    :'+review_id);

    jQuery('#response').val('');
    jQuery('.review_id').val(review_id);
    jQuery('.from').val(from);

}

</script>
