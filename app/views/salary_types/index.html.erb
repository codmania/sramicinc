<!--start search-container-->
<div class="container-fluid search-container">
  <div class="container">
    <div class="row">

      <div class="col-lg-12 no_pad ">

        <div class="company_users">

          <h1>Salary Types
            <%= link_to "Add", new_salary_type_path, :class => 'orange-btn pull-right align-orange-btn' %>
          </h1>

          <div id="no-more-tables">
            <table class="col-sm-12 table-striped table-condensed cf">
              <p id="notice"><%= flash['message']%></p>
              <thead class="cf">
              <tr>
                <th style="display: none"></th>
                <th width=550> Salary Type Name</th>
                <th width="100" class="table-last-th"></th>
              </tr>
              </thead>
              <tbody>
              <% @salary_types.each do |salary_type| %>
                  <tr>
                    <td data-title="id" style="display: none"><%= salary_type.id %></td>
                    <td data-title="Salary Type Name"><%= salary_type.try(:s_type) %></td>
                    <td data-title="" class="table-last-td">

                      <ul class="actions_container">
                        <li>
                          <%= link_to '<span class="icon icon_1"></span>'.html_safe,
                                      edit_salary_type_path(salary_type) %>

                        </li>
                        <li>
                          <%= link_to '<span class="icon icon_2"></span>'.html_safe,
                                      salary_type_path(salary_type),
                                      :method => :delete,
                                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
                        </li>
                      </ul>

                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>



      </div>

    </div>

  </div>

   <div class="paginations top-pagination">
            <%= will_paginate @salary_types, :inner_window =>2,:outer_window =>0, :renderer=> PaginationHelper::LinkRenderer%>
          </div>

</div>
