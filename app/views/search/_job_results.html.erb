<style>
.active{
  text-decoration: underline;
}
</style>


<div class="col-lg-6 col-md-6 col-sm-6 no_pad1 middle-side">


    <div class="paginations top-pagination">
      <% if @res != nil %>
        <%= will_paginate @res.hits, :inner_window =>2,:outer_window =>0,:renderer=> PaginationHelper::LinkRenderer%>
      <%end %>
    </div>
  <input type="hidden" name="total" id="total" value="<%= @res.try(:total)%>">
    <% if @res != nil && @res.results.length>0 %>
        <% @res.try(:results).try(:each_with_index) do |rest,ind| %>
          <div class="col-lg-12 search-re no_pad1">
            <a href="<%= job_path(rest.id) %>" class="result" data-index="<%= ((params['page'].to_i-1)*PER_PAGE_COUNT) +(ind+1) %>" target="">
            <h3><%= rest.title %></h3>
              <div class="comment-portion">
                    <span><%= rest.employer.try(:eprofile).try(:company_name) %></span>
                        <div class="chat-box">
                            <img src="/assets/conv-icon.png" alt="image" />
                              <span><%=Review.where(to: rest.try(:employer).user.id).count%>Reviews</span>
                          </div>
                  </div>

                  <div class="address-year">
                    <div class="year-info">
                        <img src="/assets/bag-icon.png" alt="image" />
                          <span><%= rest.experience==nil ? "Any Experience": rest.experience %></span>
                      </div>

                      <div class="addr-info">
                        <img src="/assets/location-icon.png" alt="image" />
                          <span><%=  rest.addr %></span>
                      </div>

                  </div>

                 <div class="time-comt-box">
                     <div class="time-duration">
                          <img src="/assets/time-iocn.png" alt="image" />
                          <span><%=distance_of_time_in_words(Time.now, rest.created_at.to_time) %></span>
                     </div>

                 <div class="com-box">
                            <img src="/assets/chat-icon.png" alt="image" />
                              <span><%= Comment.where(job_id: rest.id).count%> Comments</span>
                      </div>
               </div>
            </a>
          </div>
        <% end %>
  <% elsif !params['what'] && !params['keywords']%>

  <% else %>
  <h5 style="color:red; text-align:center;"><%= "No results matched for your search!!" %></h5>
  <% end %>

    <div class="col-lg-12 bottom-portion no_pad1">
        <div class="back-search">

            <a href="#"><img src="/assets/arrow.jpg" alt="" />  <span>Back to Search</span></a>

        </div>

        <div class="paginations top-pagination">
          <% if @res != nil %>
            <%= will_paginate @res.hits,:inner_window =>2,:outer_window =>0, :renderer=> PaginationHelper::LinkRenderer%>
          <%end%>
        </div>


        <div class="top-sc">

            <a href="#" >Top</a>

        </div>
    </div>
</div>
<script>
  jQuery('.result').each(function(){
      a=window.location.search
      p=a.indexOf('page')
      b=window.location.search
      if(p!=-1)
      {
        p1=a.indexOf('&',p)
        b=a.substring(0,p)+a.substring(p1+1,a.length)
      }
      $(this).attr('href',$(this).attr('href')+b+'&offset=1&page='+$(this).attr('data-index')+'&total='+$('#total').val());
  });
</script>
