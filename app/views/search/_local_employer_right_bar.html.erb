  <div class="col-lg-12 local-emp">
    <h3>Local Employers</h3>

    <%if  @jobs.length > 0 %>
        <% @jobs.try(:each) do |job|%>
        <a href="/jobs/job_eprofile?id=<%= job.employer.eprofile.id%>" target="_blank">
            <div class="emp-logo">
              <%= job.employer.eprofile.company_name%>
              <%= image_tag job.employer.eprofile.logo.url(:medium)%>
            </div>
        </a>
    <% end%>
    <%else%>
        <div class="emp-logo">
          No Local Employer near to you
        </div>
    <%end%>


