

<div class="col-lg-6 col-md-6 col-sm-6 no_pad1 middle-side">


    <div class="paginations top-pagination">
      <% if @res != nil %>
          <%= will_paginate @res.hits,:inner_window =>2,:outer_window =>0, :renderer=> PaginationHelper::LinkRenderer%>
      <%end%>
    </div>

  <input type="hidden" name="total" id="total" value="<%= @res.try(:total)%>">
<% if @res != nil && @res.results.length>0 %>
  <% @res.try(:results).try(:each_with_index) do |jprofile, index| %>
    <a href="<%= employer_talents_path(id: jprofile.id)%>" class="result" data-index="<%=  ((params['page'].to_i-1)*PER_PAGE_COUNT) +(index+1) %>" target="">
      <div class="col-lg-12 search-re no_pad1">
        <h3><%= jprofile.try(:title) %></h3>
          <div class="comment-portion">
                <span><%= jprofile.try(:name) %></span>
                    <div class="chat-box">
                    </div>
                    </div>

                  <div class="address-year">

                    <div class="addr-info">
                    <img src="/assets/location-icon.png" alt="image" />
                      <span><%= jprofile.try(:city)  %> <%= jprofile.try(:state_list).try(:name)%> <%= jprofile.try(:zip)%></span>
                  </div>

                  </div>

                     <div class="time-comt-box">
                     <div class="time-duration">
                      <img src="/assets/time-iocn.png" alt="image" />
                      <span><%=distance_of_time_in_words(Time.now, jprofile.created_at.to_time) %></span>
                 </div>

                         <div class="com-box">
                        <img src="/assets/chat-icon.png" alt="image" />
                          <span><%=Review.where(to: jprofile.try(:jobseeker).user.id).count%> Reviews</span>
                  </div>
           </div>

      </div>
      </a>
    <% end %>
    <% elsif !params['what'] && !params['skills']%>

    <% else %>
    <h5 style="color:red; text-align:center;"><%= "No results matched for your search!!" %></h5>
    <% end %>


    <div class="col-lg-12 bottom-portion no_pad1">
        <div class="back-search">
            <a href="#"><img src="/assets/arrow.jpg" alt="" />  <span>Back to Search</span></a>
        </div>

        <div class="paginations top-pagination">
          <% if @res != nil %>
              <%= will_paginate @res.hits,:inner_window =>2,:outer_window =>0, :renderer=> PaginationHelper::LinkRenderer%>
          <%end%>
        </div>


        <div class="top-sc">
            <a href="#" >Top</a>
        </div>
    </div>
</div>


<script>
    jQuery('.result').each(function(){
        url = window.location.search;
        url = url.substring(1, url.length);
        //$(this).attr('href',$(this).attr('href')+'&'+url+'&offset=1&page='+$(this).attr('data-index')+'&total='+$('#total').val());

        p=url.indexOf('page');
            if(p!=-1)
           {
                p1=url.indexOf('&',p);
                url=url.substring(0,p)+url.substring(p1+1,url.length);
           }
        console.log('url *** :'+url);
        $(this).attr('href',$(this).attr('href')+'&'+url+'&offset=1&page='+$(this).attr('data-index')+'&total='+$('#total').val());
    });
</script>
