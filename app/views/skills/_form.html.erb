<%= form_for @skill, :html => { :class => "skill" } do |f| %>

  <% if @skill.errors.any? %> 
    <ul>
      <% @skill.errors.full_messages.each do |message| %>
          <li style="color:red;"><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <label>Skill<em>*</em></label>
    <%= f.text_field :name ,:required=>true,:maxlength=>100%>
  </div>
  <div class="form-group">
    <label>Years of experience<em>*</em></label>
    <%= f.text_field :year_of_experience,:pattern => "[0-9]{1,2}(?:[\.]{1}[0-9]{1,2})?", :title => 'Years should be in xx.xx format',:required=>true,:maxlength=>5 %>
  </div>
  <div class="actions">
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),skills_path, :class => 'btn btn-ghost' %>
    <%= f.submit 'Save', :class => 'btn btn-blue' %>
  </div>

<%end%>