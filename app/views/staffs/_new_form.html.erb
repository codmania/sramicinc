<% @user.try(:errors).try(:full_messages).try(:each) do |msg| %>
  <p><%= msg %></p>
<%end %>


<%= form_tag({action: 'create'}) do %>


  <div class="form-group">
    <label>Name<em>*</em></label>
    <%= text_field_tag :name, @user.try(:name), required: true,:maxlength=>50%>
  </div>
  <div class="form-group">
    <label>Email<em>*</em></label>
    <%= text_field_tag :email, nil, required: true,:maxlength=>50,:pattern => "[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$", :title => "Invalid format"%>
  </div>
  <div class="form-group">
    <label>Password<em>*</em></label>
    <%= password_field_tag :password, nil, required: true ,:maxlength=>25%>
  </div>
  <div class="form-group">
    <label>Confirm Password<em>*</em></label>
    <%= password_field_tag :conf_password,nil, required: true ,:maxlength=>25%>
  </div>
  
  <div class="actions">
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),staffs_path, :class => 'btn btn-ghost' %>
    <%= submit_tag "Create", :class => 'btn btn-orange'%>
  </div>

<%end%>