<div class="container-fluid search-container">
  <div class="container">
    <div class="row">

      <div class="col-lg-12 no_pad ">
<div class="company_users employers_applications">
  <h3>Company Users
    <%= link_to "Create User", new_staff_path, :class => 'orange-btn pull-right align-orange-btn' %>
  </h3>

<div id="no-more-tables">
    <table class="col-sm-12  table-striped table-condensed cf">
      <thead class="cf">
      <tr>
        <th width="90">Name</th>
        <th>Email</th>
        <th width="250">Status</th>
        <th width="" class="table-last-th"></th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>

          <tr>
            <td data-title="Name"><%=user.try(:name)%></td>
            <td data-title="Email"> <%= user.email%></td>
            <td data-title="Status"><%= user.user_account_status%></td>

            <td data-title="" class="table-last-td">
              <%if user.active? %>
                  <%= link_to staffs_active_deactive_path(id: user.id, :flag => !user.active), :method=> :post  do %>
                      <span class="acct_btn"><span class="icon icon_2"></span>DeActivate</span>
                  <%end%>
              <%else%>
                  <%= link_to staffs_active_deactive_path(id: user.id, :flag => !user.active), :method=> :post  do %>
                      <span class="acct_btn"><span class="icon icon_1"></span>Active</span>
                  <%end%>
              <%end%>

              <ul class="actions_container">

                <li>
                  <%= link_to '<span class="icon icon_1"></span>'.html_safe,
                              edit_staff_path(user) %>

                </li>

                <li>
                  <%= link_to '<span class="icon icon_2"></span>'.html_safe,
                              staff_path(user),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
                </li>

              </ul>


            </td>
          </tr>
      <%end%>

        </tbody>
      </table>
    </div>
   </div>
  </div>
 </div>
</div>
<div class="paginations top-pagination">
    <%= will_paginate @users,  :inner_window =>2,:outer_window =>0,:renderer=> PaginationHelper::LinkRenderer%>
  </div>

</div>
