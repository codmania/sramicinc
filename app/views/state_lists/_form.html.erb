
<%= form_for @state_list, :html => { :class => "form-horizontal state_list" } do |f| %>
    <% if @state_list.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@state_list.errors.count, "error") %> prohibited this job from being saved:</h2>

          <ul>
            <% @state_list.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="l-block l-block_1">
      <label>Select-Country<em>*</em></label><%= f.collection_select :country_list_id, CountryList.all, :id, :name,:required=>true%>
    </div>

    <div class="l-block l-block_1">
      <label>state-Name<em>*</em></label><%= f.text_field :name ,:required=>true%>
    </div>

    <div class="form-group pro_form_group">
      <div class="col-sm-offset-4 col-sm-10">
        <%= f.submit 'Save', :class => 'btn btn-primary' %>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    state_lists_path, :class => 'btn btn-warning' %>
      </div>
    </div>

<%end%>


