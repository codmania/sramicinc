<%= form_for @state_list, :html => { :class => "state_list" } do |f| %>

  <% if @state_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@state_list.errors.count, "error") %> prohibited this job from being saved:</h2>
      <ul>
        <% @state_list.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <label>Select Country<em>*</em></label>
    <%= f.collection_select :country_list_id, CountryList.all, :id, :name,:required=>true %>
  </div>

  <div class="form-group">
    <label>State Name<em>*</em></label>
    <%= f.text_field :name ,:required=>true %>
  </div>
  
  <div class="actions">
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),state_lists_path, :class => 'btn btn-ghost' %>
    <%= f.submit 'Save', :class => 'btn btn-blue' %>
  </div>

<%end%>


