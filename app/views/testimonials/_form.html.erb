<%= form_for @testimonial, :html => {:class => "testimonial"} do |f| %>

  <% if @testimonial.errors.any? %>
    <ul>
      <% @testimonial.errors.full_messages.each_with_index do |msg, index| %>
        <% if index%2 != 0 %>
            <li style="color:red;"><%= msg %></li>
        <% end %>
      <% end %>
    </ul>
  <% end %>


  <div class="form-group">
    <label>Name<em>*</em></label>
    <%= f.text_field :name, :required => true %>
  </div>
  <div class="form-group">
    <label>Company</label>
    <%= f.text_field :company %>
  </div>
  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description,:class => 'text_area_alignment',:maxlength=>10000 %>
    <small>Maximum 10000 characters are allowed</small>
  </div>
  <div class="form-group">
    <label>Logo</label>
    <%= f.file_field :logo %>
  </div>
  
  <div class="actions">
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),testimonials_path, :class => 'btn btn-ghost' %>
    <%= f.submit 'Save', :class => 'btn btn-blue' %>
  </div>

<%end%>

