<div class="inboard">
  <div class="margin">

    <div class="enclosure">
      <h3>Testimonials</h3>
      <h6><%= link_to "Add", new_testimonial_path %></h6>

      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="lodge">
        <tr>
          <th>Name</th>
          <th>Company</th>
          <th>Description</th>
          <th>Logo</th>
          <th class="last">Actions</th>
        </tr>
        <% @testimonials.try(:each) do |testimonial| %>
        <tr>
          <td data-title="Name"><span><%= testimonial.name %></span></td>
          <td data-title="Company"><span><%= testimonial.company %></span></td>
          <td data-title="Description"><span><%= testimonial.description %></span></td>
          <% if testimonial.logo?%>
            <td data-title="Logo"><%= image_tag testimonial.logo.url(:medium), class: "img-circle" %></td>
            <% else %>
            <td>&nbsp;</td>
          <% end %>
          <td class="last">
            <%= link_to edit_testimonial_path(testimonial), class: "icon icon-edit", title: "Edit" do %><% end %>
            <%= link_to testimonial_path(testimonial), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, class: "icon icon-trash", title: "Delete" do %><% end %>
          </td>
        </tr>
        <% end %>
      </table> 

    </div>

    <div class="centered">
      <div class="paginations">
        <%= will_paginate @networks, :inner_window =>2,:outer_window =>0, :renderer=> PaginationHelper::LinkRenderer%>
      </div>
    </div>


  </div>
</div>
