<%- model_class = testimonial -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:testimonial) %>:</strong></dt>
  <dd><%= @testimonial.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:year_of_experience) %>:</strong></dt>
  <dd><%= @testimonial.email %></dd>

  <dt><strong><%= model_class.human_attribute_name(:year_of_experience) %>:</strong></dt>
  <dd><%= @testimonial.company %></dd>

  <dt><strong><%= model_class.human_attribute_name(:year_of_experience) %>:</strong></dt>
  <dd><%= @testimonial.description %></dd>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            jprofile_path(@jprofile), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_testimonial_path(@testimonial), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              testimonial_path(@testimonial),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
