<div class="session">

  <div class="wrapper midst">
    <h1>Forgot your password?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <div class="error"><%= flash['message'] %></div>

      <div class="form-group">
        <label>Email<em>*</em></label>
        <%= f.text_field :email, autofocus: true,:required=>true %>
      </div>

      <%= f.submit "Send me a reset password link", class: "btn btn-blue" %>

      <div class="centered">
        <%= link_to "Already have an account? Login", new_user_session_path %>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Don't have an account yet? Register", new_registration_path(resource_name) %>
        <% end -%>
      </div>

    <% end %>
  </div>

</div>