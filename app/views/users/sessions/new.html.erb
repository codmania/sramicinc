<!--start-->
<% %>
<div class="container-fluid bg-wrap">
<div class="container">
<div class="row">
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
       <div class="login-wrap">
        <div class="top-login">
          <div class="log-detail">
            <input type="hidden" name="t" value="<%= params[:t]%>" />
          <% if params[:t]=='candidate'%>
            <img src="/assets/login-icon.jpg" alt="" />
            <h6>Candidates</h6>
            <% else%>
              <% params[:t]=='employer' %>
              <img src="/assets/emp-1.png" alt="" />
              <h6>Employer</h6>
               <% end %>
                <!--<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. </p>-->
              </div>

            </div>


            <div class="login-bottom">
              <%- flash.each do |name, msg| -%>
                <% if  msg != 'employer' &&  msg != 'candidate' %>
                <center><%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %></center>
                <% end %>
              <%- end -%>
            <div class="l-block">

            <label>Email Address<em>*</em></label>
              <%= f.email_field :email, autofocus: true,presence: true,required:true, :class => 'email_field' %>
              </div>

              <div class="l-block">
                <label>Password<em>*</em></label>
                <%= f.password_field :password, autocomplete: "off",required:true %>
              </div>

              <div class="l-block">
                <label></label>
                <%= f.submit "Log in", :class=> "input-login login-center-button" %>
              </div>

              <div class="l-block">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                <% end -%>
              </div>



              <div class="l-block">

                <%= link_to '<img src="/assets/login_fb.png" alt="" />'.html_safe,
                            user_omniauth_authorize_path(:facebook, user: params[:t]=='candidate'? 'jobseeker':'employer')  %>

                <%= link_to '<img src="/assets/login_google.png" alt="" />'.html_safe,
                            user_omniauth_authorize_path(:google_oauth2, user: params[:t]=='candidate'? 'jobseeker':'employer'), :class => 'margin_left' %>

              </div>

            </div>

            <div class="log-bt">
              <p>Not a Member?
                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <% if params[:t]=='candidate'%>
                    <%= link_to "Register Now", new_registration_path(resource_name) %>
                <%else%>
                    <%= link_to "Register Now", employer_registration_path %>
                  <%end%>
                <% end -%>

              </p>
            </div>
          </div>
          <% end %>
    </div>
  </div>
</div>
<!--End-->
